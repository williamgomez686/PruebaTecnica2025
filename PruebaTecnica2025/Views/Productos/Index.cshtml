@model IEnumerable<PruebaTecnica2025.Models.Producto>

@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="h3 text-center text-primary">Lista de @ViewBag.Title</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Codigo Producto
            </th>
            <th>
                Nombre Producto
            </th>
            <th>
               Categoria
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoCategoriaNavigation.Nombre)
            </td>
        </tr>
}
    </tbody>
</table>
